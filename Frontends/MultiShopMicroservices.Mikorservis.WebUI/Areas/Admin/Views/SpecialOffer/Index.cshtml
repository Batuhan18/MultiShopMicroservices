@model List<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Listesi</h4>
                <p>Özel teklif ile ilgili işlemlerinizi bu sayfadan gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Teklif Başlığı</th>
                                <th>Teklif Alt Başlığı</th>
                                <th>Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>


                            @if (Model == null)
                            {
                                <div class="alert alert-danger">
                                    Model NULL geliyor
                                </div>
                            }
                            else if (!Model.Any())
                            {
                                <div class="alert alert-warning">
                                    Kayıt yok
                                </div>
                            }
                            else
                            {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Subtitle</td>
                                        <td>@item.ImageUrl</td>
                                        <td>
                                            <a href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId" class="btn btn-success">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }



                    </table>
                    <a href="/Admin/SpecialOffer/CreateSpecialOffer/" class="btn btn-primary">Yeni Teklif Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

